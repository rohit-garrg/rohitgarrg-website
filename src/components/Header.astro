---
const currentPath = Astro.url.pathname;
---

<header>
  <div class="container">
    <nav>
      <a href="/" class="logo">RG</a>
      <ul class="nav-links">
        <li><a href="/writing" class={currentPath.startsWith('/writing') ? 'active' : ''}>Writing</a></li>
        <li><a href="/projects" class={currentPath.startsWith('/projects') ? 'active' : ''}>Projects</a></li>
        <li><a href="/speaking" class={currentPath.startsWith('/speaking') ? 'active' : ''}>Speaking</a></li>
        <li><a href="/about" class={currentPath === '/about' ? 'active' : ''}>About</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-md) 0;
    background-color: var(--color-bg);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .logo:hover {
    color: var(--color-accent);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: var(--space-lg);
    align-items: center;
  }

  .nav-links a {
    color: var(--color-text-light);
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-accent);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .nav-links {
      gap: var(--space-md);
    }

    .nav-links a {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 480px) {
    nav {
      gap: var(--space-sm);
    }

    .logo {
      font-size: 1.25rem;
    }

    .nav-links {
      gap: var(--space-sm);
    }

    .nav-links a {
      font-size: 0.8rem;
    }
  }
</style>
